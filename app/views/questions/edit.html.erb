<h1 class="main-title">Edit question?</h1>

<%= form_for :question, url: question_path(@question), method: :patch do |f| %>

<form>
  <div class="form-group">
    <div class="field">
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control askme-form-control" %>
      </p>

      <p>
        <%= f.label :text %><br>
        <%= f.text_field :text, class: "form-control askme-form-control" %>
      </p>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "submit", class: 'btn btn-primary login-btn' %>
  </div>
</form>
<% end %>
